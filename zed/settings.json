{
  "disable_ai": true,
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.7,
    "border_size": 0.5
  },
  "search": { "button": true },
  "diagnostics": { "button": true },
  "agent": {
    "single_file_review": false,
    "model_parameters": []
  },
  "bottom_dock_layout": "right_aligned",
  "scroll_beyond_last_line": "off",
  "cursor_blink": false,
  "scrollbar": {
    "show": "system"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "file_finder": {
    "modal_max_width": "medium",
    "include_ignored": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "close_position": "right",
    "activate_on_close": "neighbour"
  },
  "terminal": {
    "toolbar": { "breadcrumbs": false },
    "line_height": "standard",
    "button": true,
    "max_scroll_history_lines": 30000,
    "blinking": "off",
    "font_features": {
      "liga": true,
      "ss02": true,
      "ss03": true,
      "ss05": true,
      "ss07": true
    },
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "fish"
      }
    },
    "env": {
      "GIT_EDITOR": "zed --wait",
      "EDITOR": "zed"
    },
    "working_directory": "current_project_directory"
  },
  "debugger": {
    "button": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "project_panel": {
    "file_icons": true,
    "folder_icons": true,
    "default_width": 300,
    "dock": "left",
    "auto_fold_dirs": false,
    "button": true,
    "auto_reveal_entries": false,
    "entry_spacing": "standard"
  },
  "outline_panel": {
    "dock": "right",
    "button": true
  },
  "git_panel": {
    "sort_by_path": true,
    "default_width": 300,
    "button": true
  },
  "buffer_font_family": ".ZedMono",
  "ui_font_family": ".ZedMono",
  "vim_mode": true,
  "base_keymap": "JetBrains",
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "GitHub Dark Classic"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**/defaults/**.yml",
      "**/defaults/**.yaml",
      "**/meta/**.yml",
      "**/meta/**.yaml",
      "**/tasks/**.yml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/**.yml",
      "**/group_vars/**.yaml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Dockerfile": ["Dockerfile*"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml"
    ],
    "Shell Script": ["*.envrc*"],
    "Nginx": ["**/nginx/**/*.conf", "nginx.conf"]
  },
  "auto_update_extensions": {
    "ansible": true,
    "basher": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "github-actions": true,
    "golangci-lint": true,
    "harper": true,
    "helm": true,
    "html": true,
    "latex": true,
    "log": true,
    "lua": true,
    "make": true,
    "markdown-oxide": true,
    "nginx": true,
    "nix": true,
    "prisma": true,
    "scheme": true,
    "sql": true,
    "terraform": true,
    "tokyo-night": true,
    "toml": true,
    "vscode-icons": true,
    "wakatime": true,
    "zig": true
  },
  "languages": {
    "Python": {
      "language_servers": ["!ty", "ruff", "basedpyright"]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          "allFeatures": true,
          "loadOutDirsFromCheck": true,
          "buildScripts": {
            "enable": true
          }
        },
        "procMacro": {
          "enable": true,
          "ignored": {
            "async-trait": ["async_trait"],
            "napi-derive": ["napi"],
            "async-recursion": ["async_recursion"]
          }
        },
        "rust": {
          "analyzerTargetDir": true
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "usePlaceholders": false,
        "completeUnimported": true,
        "staticcheck": false,
        "semanticTokens": true,
        "directoryFilters": [
          "-.git",
          "-.vscode",
          "-.idea",
          "-.vscode-test",
          "-node_modules"
        ],
        "experimentalPostfixCompletions": true,
        "codelenses": {
          "gc_details": false,
          "generate": true,
          "regenerate_cgo": true,
          "run_govulncheck": true,
          "test": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        },
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        },
        "analyses": {
          "nilness": true,
          "unusedparams": true,
          "unusedwrite": true,
          "useany": true
        }
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints.callArgumentNames": false,
          "diagnosticSeverityOverrides": {
            "reportAny": "none",
            "reportMissingParameterType": "none",
            "reportMissingTypeArgument": "none",
            "reportMissingTypeStubs": "none",
            "reportUnknownArgumentType": "none",
            "reportUnknownLambdaType": "none",
            "reportUnknownMemberType": "none",
            "reportUnknownParameterType": "none",
            "reportUnknownVariableType": "none",
            "reportImplicitRelativeImport": "none"
          }
        }
      }
    }
  }
}
